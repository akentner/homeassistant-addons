{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "commitMessageAction": "update",
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessagePrefix": "chore:",
  "commitMessageTopic": "{{depName}}",
  "customManagers": [
    {
      "autoReplaceStringTemplate": "version: \"{{newValue}}-0\"",
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "akentner/fritz-callmonitor2mqtt",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "fileMatch": [
        "^fritz-callmonitor2mqtt/config\\.yaml$"
      ],
      "matchStrings": [
        "version:\\s+\"(?<currentValue>[^-\"]+)-\\d+\""
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "akentner/fritz-callmonitor2mqtt",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "fileMatch": [
        "^fritz-callmonitor2mqtt/build\\.yaml$"
      ],
      "matchStrings": [
        "VERSION:\\s+\"(?<currentValue>[^\"]+)\""
      ],
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "akentner/fritz-callmonitor2mqtt",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "fileMatch": [
        "^fritz-callmonitor2mqtt/README\\.md$"
      ],
      "matchStrings": [
        "\\[release-shield\\]: https://img\\.shields\\.io/badge/version-v(?<currentValue>[^-]+)-blue\\.svg",
        "\\[release\\]: https://github\\.com/akentner/homeassistant-addons/tree/v(?<currentValue>[^\\s]+)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "additionalBranchPrefix": "fritz-callmonitor-",
      "groupName": "fritz-callmonitor2mqtt",
      "matchDepNames": [
        "akentner/fritz-callmonitor2mqtt"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "semanticCommits": "enabled"
    }
  ],
  "platformAutomerge": false,
  "schedule": [
    "at any time"
  ],
  "timezone": "Europe/Berlin"
}
